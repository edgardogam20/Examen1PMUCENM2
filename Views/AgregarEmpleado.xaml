<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen1PMUCENM2.Views.AgregarEmpleado"
             Title="Agregar Empleado">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry x:Name="nombreEntry" Placeholder="Nombre" />
            <DatePicker x:Name="fechaPicker" />
            <Entry x:Name="puestoEntry" Placeholder="Puesto" />
            <Entry x:Name="correoEntry" Placeholder="Correo" />

            <Image x:Name="fotoPreview"
                   HeightRequest="200"
                   Aspect="AspectFit"
                   BackgroundColor="LightGray" />

            <Button Text="Tomar Foto" Clicked="OnTomarFoto" />
            <Button x:Name="guardarButton" Text="Guardar Empleado" Clicked="OnGuardarEmpleado" IsEnabled="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>