<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen1PMUCENM2.Views.AgregarEmpleado"
             Title="Agregar Empleado">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry x:Name="nombreEntry" Placeholder="Nombre" />
            <DatePicker x:Name="fechaPicker" />
            <Entry x:Name="puestoEntry" Placeholder="Puesto" />
            <Entry x:Name="correoEntry" Placeholder="Correo" />

            <Image x:Name="fotoPreview"
                   WidthRequest="150"
                   HeightRequest="150"
                   BackgroundColor="LightGray"
                   Aspect="AspectFill" />

            <Button Text="Seleccionar Foto" Clicked="OnSeleccionarFoto" />
            <Button Text="Guardar Empleado" Clicked="OnGuardarEmpleado" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>