<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:base64="clr-namespace:Examen1PMUCENM2.Converters"
             x:Class="Examen1PMUCENM2.Views.ListaEmpleados"
             Title="Lista de Empleados">

    <ContentPage.Resources>
        <ResourceDictionary>
            <base64:Base64ToImage x:Key="Base64ToImageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <CollectionView x:Name="empleadosCollection" ItemsSource="{Binding}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <!-- Foto -->
                        <Image Grid.RowSpan="3"
                               WidthRequest="60"
                               HeightRequest="60"
                               Aspect="AspectFill"
                               Margin="0,0,10,0">
                            <Image.Source>
                                <Binding Path="Foto" Converter="{StaticResource Base64ToImageConverter}" />
                            </Image.Source>
                        </Image>

                        <!-- Datos -->
                        <Label Grid.Column="1" Text="{Binding Nombre}" FontAttributes="Bold" />
                        <Label Grid.Column="1" Grid.Row="1" Text="{Binding Puesto}" />
                        <Label Grid.Column="1" Grid.Row="2" Text="{Binding Correo}" FontSize="12" TextColor="Gray" />

                        <!-- Botones -->
                        <HorizontalStackLayout Grid.Column="1" Grid.Row="3" Spacing="10" Margin="0,5,0,0">
                            <Button Text="Editar" Clicked="OnEditarEmpleado" />
                            <Button Text="Eliminar" Clicked="OnEliminarEmpleado" BackgroundColor="Red" TextColor="White" />
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>